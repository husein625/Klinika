@model Klinika.DAL.Models.Nalaz

@{
    ViewData["Title"] = "Edit";
}

<h1>Izmjena Nalaza</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumVrijeme" class="control-label"></label>
                <input asp-for="DatumVrijeme" class="form-control" />
                <span asp-validation-for="DatumVrijeme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrijemID" class="control-label"></label>
                <select asp-for="PrijemID" class="form-control" asp-items="ViewBag.PrijemID"></select>
                <span asp-validation-for="PrijemID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <input type="submit" value="Spasi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
